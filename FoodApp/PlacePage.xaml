<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodApp.Model.PlacePage">
    <ContentPage.Content>
        <Grid Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Image x:Name="PictureFrame" Grid.Row="0"> </Image>
            
            <Label  
                x:Name ="PlaceName"
               Grid.Row="1" >Name</Label>

            <Label 
                x:Name="Rating"
               Grid.Row="2" >Rating</Label>

            <Label 
                x:Name="Address"
               Grid.Row="3" >Address</Label>


        </Grid>
    </ContentPage.Content>
</ContentPage>